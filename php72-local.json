{
    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant"
    },
    "builders": [{
        "type": "virtualbox-iso",
        "virtualbox_version_file": ".vbox_version",
        "headless": false,

        "guest_os_type": "RedHat_64",
        "disk_size": 81920,
        "hard_drive_interface": "sata",

        "iso_url": "http://centos.s.uw.edu/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1708.iso",
        "iso_checksum": "fe3d960cce4d2c1c9f1b66817fe87cc0ee1a1c6c5dd126204cb5c33d51a45620",
        "iso_checksum_type": "sha256",

        "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
        ],
        "boot_wait": "12s",

        "http_directory": "http",
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

        "communicator": "ssh",
		"ssh_pty": "true",
		"ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_port": 22,
        "ssh_wait_timeout": "10000s",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "2048"],
            ["modifyvm", "{{.Name}}", "--cpus", "2"]
        ],

        "shutdown_command": "echo '{{user `ssh_name`}}'|sudo -S /sbin/halt -h -p"
    }],
    "post-processors": [{
        "output": "build/iweb72.box",
        "type": "vagrant"
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "_files/httpd.conf",
            "destination": "/home/vagrant/httpd.conf"
        },
        {
            "type": "file",
            "source": "_files/rewrites.conf",
            "destination": "/home/vagrant/rewrites.conf"
        },
        {
            "type": "file",
            "source": "_files/stunnel.service",
            "destination": "/home/vagrant/stunnel.service"
        },
        {
            "type": "file",
            "source": "_files/ssh_key_config",
            "destination": "/home/vagrant/ssh_config"
        },
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "scripts": [
                "scripts/vboxguest.sh",
                "scripts/lamp-php72.sh",
                "scripts/composer.sh",
                "scripts/vagrant.sh",
                "scripts/apache.sh",
                "scripts/phpmyadmin.sh",
                "scripts/git.sh",
                "scripts/secure-mariadb.sh",
                "scripts/php.sh",
                "scripts/aliases.sh",
                "scripts/drush.sh",
                "scripts/compact.sh"
            ]
        }
    ]
}
